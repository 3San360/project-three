[flake8]
max-line-length = 120
max-complexity = 10
max-function-length = 50
ignore = E203, E501, W503
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    .env,
    .venv,
    node_modules,
    .github,
    dist,
    build
per-file-ignores = 
    __init__.py:F401
    test_*.py:S101
    **/migrations/*.py:E501
extend-ignore = E203, W503
select = E,W,F,C
statistics = True
count = True
show-source = True
